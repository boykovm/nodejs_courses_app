<h1>Edit course {{ course.title }}</h1>

<form action="/courses/edit" method="post" class="course-form">
    <div class="input-field">
        <input type="text" name="title" id="title" class="validate" required value="{{ course.title }}">
        <label for="title">Course name</label>
        <span class="helper-text" data-error="Input name"></span>
    </div>

    <div class="input-field">
        <input type="number" name="price" id="price" class="validate" required value="{{ course.price }}" min="1">
        <label for="price">
            Price $
        </label>
        <span class="helper-text" data-error="Input price"></span>
    </div>

    <div class="input-field">
        <input type="text" id="img" name="img" class="validate" required value="{{ course.img }}">
        <label for="img">
            Image URl
        </label>
        <span class="helper-text" data-error="input url"></span>
    </div>

    <input type="hidden" name="id" value="{{ course.id }}">
    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button class="btn btn-primary" type="submit">
        Edit course
    </button>
</form>

<form action="/courses/remove" method="post">
    <input type="hidden" name="id" value="{{ course.id }}">
    <input type="hidden" name="_csrf" value="{{csrf}}">
    <button class="btn red">Delete course</button>
</form>
